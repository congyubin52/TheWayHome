    <!--보호소 리스트-->
    <select id="selectShelter"
            resultType="com.btc.thewayhome.admin.pets.user.UserShelterListInfoDto">
        <choose>
            <when test="searchInput == null">
                SELECT
                    n.s_no,
                    n.s_name,
                    i.s_address,
                    i.s_phone,
                    i.s_reg_date
                FROM
                        tbl_shelter_num n
                    INNER JOIN
                        tbl_shelter_info i
                    ON
                        n.s_name = i.s_name
                ORDER BY
                    s_no ASC
            </when>
            <otherwise>
                <choose>
                    <when test="searchOption eq '0'.toString()">
                        SELECT
                            n.s_no,
                            n.s_name,
                            i.s_address,
                            i.s_phone,
                            i.s_reg_date
                        FROM
                            tbl_shelter_num n
                        INNER JOIN
                            tbl_shelter_info i
                        ON
                            n.s_name = i.s_name
                        WHERE
                            n.s_name like concat('%', #{searchInput}  ,'%')
                        ORDER BY
                            s_no ASC
                    </when>
                    <otherwise>
                        SELECT
                            n.s_no,
                            n.s_name,
                            i.s_address,
                            i.s_phone,
                            i.s_reg_date
                        FROM
                            tbl_shelter_num n
                        INNER JOIN
                            tbl_shelter_info i
                        ON
                            n.s_name = i.s_name
                        WHERE
                            i.s_address like concat('%', #{searchInput} ,'%')
                        ORDER BY
                            s_no ASC
                    </otherwise>
                </choose>
            </otherwise>
        </choose>
    </select>

    <!--보호 동물 리스트(보호소 리스트 상세 페이지)-->
    <select id="selectPets"
            parameterType="com.btc.thewayhome.admin.pets.user.UserPetsListInfoDto"
            resultType="com.btc.thewayhome.admin.pets.user.UserPetsListInfoDto">
        <choose>
        <when test="searchInput == null">
        SELECT
            a.an_no,
            a.an_thumbnail,
            sn.s_no,
            a.s_name,
            a.an_an_kind,
            a.an_k_kind,
            a.an_n_start,
            a.an_n_end,
            a.an_p_s_state
        FROM tbl_animal_api AS a
            JOIN
                tbl_shelter_num AS sn
            ON
                a.s_name = sn.s_name
        WHERE
            sn.s_no = #{s_no}
        </when>
        <otherwise>
            <choose>
                <when test="searchOption eq '0'.toString()">
                    SELECT
                        *
                    FROM
                        tbl_animal_api a
                        JOIN
                            tbl_shelter_num sn
                        ON
                            a.s_name = sn.s_name
                    WHERE
                        a.an_an_kind like concat('%',#{searchInput},'%')
                </when>
                <otherwise>
                    SELECT
                        *
                    FROM
                        tbl_animal_api a
                        JOIN
                            tbl_shelter_num sn
                        ON
                            a.s_name = sn.s_name
                    WHERE
                        a.an_k_kind like concat('%',#{searchInput},'%')
                </otherwise>
            </choose>
        </otherwise>
        </choose>
    </select>

